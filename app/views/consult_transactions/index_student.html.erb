<h1>我的导师</h1>
<hr>
<% for transaction in @transactions do %>
  <% instructor = transaction.instructor %>
  <div class="row">
    <div class="col-3">
      <%= image_tag profile_image_of(instructor), class: 'd-block m-auto' %>
    </div>
    <div class="col-4">
      <%= link_to transaction do %>
        <h5><%= '服务类别' %></h5>
      <% end %>
      <div>
        <span class="mr-3">状态:</span><span>未确认</span>
      </div>
      <div>
        <span class="mr-3">订单创建日期:</span><span><%= transaction.created_at %></span>
      </div>
      <div>
        <span class="mr-3">订单更新日期:</span><span><%= transaction.updated_at %></span>
      </div>
    </div>
    <div class="col-5 d-flex flex-column">
      <h6>聊天记录</h6>
      <div class="chat-box" style="flex:1;background-color:#DDDDDD;">
        <div class="chat-lines">
          <% for chat_line in transaction.chat.chat_lines do %>
          <div>
            <span><%= chat_line.content %></span>
          </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
<% end %>
