<% for transaction in @transactions do %>
  <% other = transaction.send(other_role) %>
  <% @transactions.delete(transaction) if other.nil?%>
<%end%>

<% if @transactions.size == 0 %>
  <p class="no-order-message">No orders here</p>
<%else%>
<div class="row order-title-row">
  <div class="col-sm-3"><%= other_role == "instructor" ? "Instructor Name" : "Student Name" %></div>
  <div class="col-sm-3">Order Placed at</div>
  <div class="col-sm-3">Order Status</div>
  <div class="col-sm-3">Actions</div>
</div>


  <% for transaction in @transactions do %>
    <% other = transaction.send(other_role) %>
    <% next if other.nil?%>

    <div class="row order-title-row data-row">
      <div class="col-sm-3"><%= other.full_name %></div>
      <div class="col-sm-3"><%= transaction.created_at %></div>
      <div class="col-sm-3"><%= transaction.status %></div>
      <div class="col-sm-3">
        <%= link_to transaction do %>
          View Details
        <% end %>
      </div>
    </div>

  <% end %>
<% end %>
