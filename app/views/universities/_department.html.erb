<% local = session[:locale] || "en" %>
<div class="col-md-4 col-sm-6 instructor-profile-box">
  <%= link_to university_department_path(university_id: department.university_id, id: department.id) do %>
    <div class="div-bg">
      <div class="img" style="background-image: url('<%= department.gallery_images.first.try(:image).try(:url)%>');">
        <div class="location-new">
          <%= spec_list = department.name local %>
        </div>
      </div>
    </div>
  <%end%>
</div>
