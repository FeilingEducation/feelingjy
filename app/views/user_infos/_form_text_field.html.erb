<% required = false if local_assigns[:required].nil? %>
<% placeholder = '' if local_assigns[:placeholder].nil? %>

<div class="form-group row">
  <%= f.label field, text, class: 'col-md-3 col-form-label' %>
  <div class="col-md-4">
    <%= f.text_field field, class: 'form-control', placeholder: placeholder, required: required %>
  </div>
</div>
