<header class="main-header <%= current_user.present? ? ' signed-in': '' %>">
  <%#= render partial: 'top_bar' %>

  <%#= test git  %>
  <div class="main-nav">
    <div class="header-container">
      <div class="row">
        <div class="col-md-1 col-sm-1 logo">
          <a href="/">
            <%=image_tag "reskin/logo-small_v1.png", class: 'colored'%>
            <%=image_tag "reskin/logo-small.png", class: 'orig'%>
          </a>
        </div>

        <%if current_user.present?%>
          <div class="col-md-10 col-sm-10 text-right">
            <ul class="main-nav <%= current_user.nil? ? "public" : ""%>">
              <% if !user_is_instructor? %>
                <li><%= link_to I18n.t("header.logged_in.become_mentor"), new_instructor_info_path, class: "nav-link" %></li>
              <%end%>
              <li><%= link_to I18n.t("header.logged_in.find_mentor"), mentors_path, class: "header-nav-link nav-link" %></li>
              <li class="nav-item">
                <%= link_to I18n.t("header.logged_in.my_orders"), consult_transactions_path, class: 'nav-link' %>
              </li>
              <li class="nav-item">
                <%= link_to I18n.t("header.logged_in.messages"), messages_path, class: 'nav-link nav-message' %>
              </li>
              <li class="nav-item">
                <% if session[:locale] == "cn" %>
                  <%#= image_tag "reskin/flag/usa.jpg" %>
                  <%= link_to "EN", set_local_path(local: "en"), class: 'nav-link'%>
                <%else%>
                  <%#= image_tag "reskin/flag/china.jpg" %>
                  <%= link_to "CN", set_local_path(local: "cn"), class: 'nav-link'%>
                <%end%>
              </li>
            </ul>
          </div>

            <div class="col-md-1 col-sm-1">
              <ul class="login main-nav top-bar">
                <li class="dropdown">
                  <a href="javascript:void(0)" id="profile" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    <%= image_tag (profile_image_of || "user-ico.png" ), class: "profile-image-thumbnail" %>
                  </a>
                  <div class="dropdown-menu top-bar-drop" aria-labelledby="profile">
                    <% if user_is_instructor? %>
                      <%= link_to I18n.t("header.logged_in.edit_instructor_profile"), edit_instructor_info_path, class: 'dropdown-item' %>
                    <% end %>
                    <%= link_to I18n.t("header.logged_in.view_profile"), user_info_path, class: 'dropdown-item' %>
                    <%= link_to I18n.t("header.logged_in.edit_profile"), edit_user_info_path, class: 'dropdown-item' %>
                    <%#= link_to '安全中心', edit_user_registration_path, class: 'dropdown-item' %>
                    <%= link_to I18n.t("header.logged_in.logout"), destroy_user_session_path, class: "dropdown-item", method: "delete" %>
                  </div>
                </li>
              </ul>
            </ul>
          </div>
        <%else%>
          <div class="col-md-7 col-sm-7"></div>
          <div class="col-md-4 col-sm-4">
            <ul class="main-nav top-bar">
              <% unless current_user.present?%>
                <li><%= link_to I18n.t("header.logged_in.find_mentor"), mentors_path, class: "nav-link" %></li>
              <%end%>
              <li class="">
                <%= link_to I18n.t("header.signup"), new_user_registration_path, remote: true, class: "nav-link" %>
              </li>
              <li class="">
                <%= link_to I18n.t("header.login"), new_user_session_path, remote: true, class: "nav-link" %>
              </li>
              <li class="nav-item">
                <% if session[:locale] == "cn" %>
                  <%#= image_tag "reskin/flag/usa.jpg" %>
                  <%= link_to "EN", set_local_path(local: "en"), class: 'nav-link'%>
                <%else%>
                  <%#= image_tag "reskin/flag/china.jpg" %>
                  <%= link_to "CN", set_local_path(local: "cn"), class: 'nav-link'%>
                <%end%>
              </li>
            </ul>
          </div>
        <%end%>
        </div>
      </div>
    </div>
  </header>
