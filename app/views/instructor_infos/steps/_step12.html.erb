            <div class="info-row">
              <%= image_tag "registration/tick.png"%>
              <p> <%= I18n.t("registration.step12.r4") %></p>
            </div>
            <div class="info-row">
              <%= image_tag "registration/tick.png"%>
              <p> <%= I18n.t("registration.step12.r5") %></p>
            </div>
            <div class="info-row">
              <%= image_tag "registration/tick.png"%>
              <p> <%= I18n.t("registration.step12.r6") %></p>
