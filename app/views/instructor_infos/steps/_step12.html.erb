          <div class="question-block">
            <p class="survey-question"><%= I18n.t("registration.step12.sub_title") %></p>
            <label><%= I18n.t("registration.step12.q1") %></label>
            <div class="info-row">
              <%= image_tag "registration/tick.png"%>
              <p> <%= I18n.t("registration.step12.r1") %></p>
