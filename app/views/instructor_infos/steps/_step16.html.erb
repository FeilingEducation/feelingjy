<div class="row calendar-info-wrapper">
  <div class="col-md-12">
    <div class="section-header">
      <h3><%= I18n.t("registration.step12.title") %></h3>
    </div>
  </div>
  <!-- <div class="col-md-2"></div> -->
  <div class="col-md-7 left-panel">
    <fieldset class="">
      <div class="row">
        <div class="col-md-12">
          <div class="question-block">
            <p class="survey-question"><%= I18n.t("registration.step16.sub_title") %></p>
            <label><%= I18n.t("registration.step16.p1") %></label>
            <div class="row">
              <div class="col-md-7">
                <div class="calendar-info-box first">
                  <div class="img-wrapper"><%= image_tag "registration/calendar-icon.png"%></div>
                  <div class="txt-wrapper"><p><%= I18n.t("registration.step16.label1") %></p></div>
                </div>
              </div>
              </div>
              <div class="row">
              <div class="col-md-8">
                <div class="calendar-info-box  second">
                  <div class="img-wrapper"><%= image_tag "registration/cancel-icon.png"%></div>
                  <div class="txt-wrapper"><p><%= I18n.t("registration.step16.label2") %></p></div>
                </div>
              </div>
            </div>
          </div>
          <hr/>
          <div class="question-block custom-checkbox-radios">
            <div class="row">
              <div class="col-md-8">
                <%= f.check_box :ensure_accurate_time, id: 'ensure_accurate_time'%><label for="ensure_accurate_time"><%= I18n.t("registration.step16.label3") %></label>
              </div>
            </div>
          </div>
          <div class="survey-btn-row">
            <button type="button" class="btn btn-default step-navigate pull-left" data-target="#step15" data-percentage='21%' ><%= I18n.t("registration.btn_back") %></button>
            <button type="button" class="btn btn-primary step-navigate next main-btn pull-right next" data-percentage='40%' data-target="#step17"><%= I18n.t("registration.btn_next") %></button>
          </div>
        </div>
      </div>
    </fieldset>
  </div>
</div>
