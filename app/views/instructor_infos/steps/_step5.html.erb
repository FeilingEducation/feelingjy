  <div class="col-md-6 left-panel">
    <fieldset class="">
      <div class="row">
        <div class="col-md-12">
          <div class="section-header">
            <h3 > Please fill in the information below</h3>
          </div>
          <div class="question-block check_boxes">
            <p class="survey-question">What informatin can you share to students?</p>
            <div class="">
              <%= f.check_box :share_resume %>
              <%= f.label :share_resume, "Personal CV" %>
            </div>
            <div class="">
              <%= f.check_box :share_application_essay %>
              <%= f.label :share_application_essay, "Application Letter" %>
