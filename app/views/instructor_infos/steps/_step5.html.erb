              <div class="col-md-7">
                <button type="button" class="btn btn-default step-navigate pull-right" data-target="#step4">上一步</button>
                <button type="button" class="btn btn-primary step-navigate main-btn pull-left next" data-percentage='100%' data-target="#step6">下一步</button>
