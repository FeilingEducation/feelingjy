<div class="row">
  <div class="col-md-12">
    <div class="section-header">
      <%= I18n.t("registration.step12.title") %>
    </div>
  </div>
  <div class="col-md-2"></div>
  <div class="col-md-5 left-panel">
    <fieldset class="">
      <div class="row">
        <div class="col-md-10">
          <div class="question-block">
            <p class="survey-question">Set a length of time a student can work with you</p>
            <p class="">How longÂ you are willing to work with one student is important. Students will use this to adjust their progress and communication with you.</p>
          </div>

          <div class="question-block">
            <div class="row">
              <div class="col-md-10">
                <%= f.label :min_work_daysss, "Minimum work days?" %>
                <%= f.number_field :min_work_days, min: 2, max: 30, default: 2, class: '', placeholder: 'Select minum work days', id: 'min_days' %>
              </div>
            </div>
          </div>
          <div class="question-block">
            <div class="row">
              <div class="col-md-10">
                <%= f.label :max_work_days, "Maximum work days?" %>
                <%= f.number_field :max_work_days, min: 2, max: 30,default: 2, class: '', placeholder: 'Select maximum work days', id: 'max_days' %>
                <span class="error hidden"> It should be greater than min days.</span>
              </div>
            </div>
          </div>

          <div class="survey-btn-row">
            <button type="button" class="btn btn-default step-navigate pull-left" data-target="#step17" data-percentage='40%' ><%= I18n.t("registration.btn_back") %></button>
            <button type="button" class="btn btn-primary step-navigate main-btn pull-right next"  data-percentage='55%' data-target="#step19"><%= I18n.t("registration.btn_next") %></button>
          </div>
        </div>
      </div>
    </fieldset>
  </div>
  <div class="col-md-3 right-panel">
    <div class="calendar-box elepahnt">
      <p>You can choose<br/> between 2 and 30 days</p>
      <%= image_tag "registration/calendar-min-max.png"%>
    </div>
  </div>
</div>
