<div class="row">
  <div class="col-md-12">
    <div class="section-header">
      <h3><%= I18n.t("registration.step12.title") %></h3>
    </div>
  </div>
</div>
<div class="row contact-info-wrapper">
  <div class="col-md-2"></div>
  <div class="col-md-8 left-panel">
    <fieldset class="">
      <div class="row">
        <div class="col-md-12">
          <div class="question-block">
            <p class="survey-question"><%= I18n.t("registration.step15.sub_title") %></p>
            <div class="row">
              <div class="col-md-4">
                <div class=" contact-info-box">
                  <%= image_tag "registration/help-way1.png"%>
                  <div class="first-para"> <p><%= I18n.t("registration.step15.box1.p1") %></p> </div>
                  <p><%= I18n.t("registration.step15.box1.p2") %></p>
                </div>
              </div>
              <div class="col-md-4">
                <div class=" contact-info-box">
                  <%= image_tag "registration/help-way2.png"%>
                  <div class="first-para"> <p><%= I18n.t("registration.step15.box2.p1") %></p> </div>
                  <p><%= I18n.t("registration.step15.box2.p2") %></p>
                </div>
              </div>
              <div class="col-md-4">
                <div class=" contact-info-box">
                  <%= image_tag "registration/help-way3.png"%>
                  <div class="first-para"> <p><%= I18n.t("registration.step15.box3.p1") %></p> </div>
                  <p><%= I18n.t("registration.step15.box3.p2") %></p>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </fieldset>
  </div>
</div>
<div class="row">
  <div class="col-md-2"></div>
  <div class="col-md-8">
    <div class="survey-btn-row">
      <button type="button" class="btn btn-default step-navigate pull-left" data-target="#step14" data-percentage='17%' ><%= I18n.t("registration.btn_back") %></button>
      <button type="button" class="btn btn-primary step-navigate next main-btn pull-right next" data-percentage='30%' data-target="#step16"><%= I18n.t("registration.btn_next") %></button>
    </div>
  </div>
</div>
