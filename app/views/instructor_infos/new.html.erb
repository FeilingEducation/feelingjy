<div class="row justify-content-center mentor-survey row">
  <div class="col-md-12">
    <%= render partial: 'survey' %>
  </div>
</div>
<script type="text/javascript">
  $('.body').prepend('<div class="progress"><div class="progress-bar" role="progressbar" aria-valuenow="70" aria-valuemin="0" aria-valuemax="100"></div></div>');
  $(window).scrollTop(0)
  $(document).on('click', '.step-navigate.next', function(){
    $('.progress .progress-bar').css('width', $(this).data('percentage'))
    $(window).scrollTop(0)
  })
  $('.initialize-section').on('click', function(){
    $('.body .progress').addClass($(this).data('section'))
    $(window).scrollTop(0)
    $('.progress .progress-bar').css('width', "1%")
  })

  $("#selected-terms").on('click', function(){
    $.map($('.question-block.our-terms-agreed').find('input[type=checkbox]'), function(elem, idx){
      var cls = $(elem).data('class');
      if($(elem).prop("checked")){
        $("#our-terms-agreed ."+cls).removeClass('hidden')
      }
      else{
        $("#our-terms-agreed ."+cls).addClass('hidden')
      }
    })

    $.map($('.question-block.your-terms-agreed').find('input[type=checkbox]'), function(elem, idx){
      var cls = $(elem).data('class');
      if($(elem).prop("checked")){
        $("#your-terms-agreed ."+cls).removeClass('hidden')
      }
      else{
        $("#your-terms-agreed ."+cls).addClass('hidden')
      }
    })
  })
  $( ".select2" ).select2({})

</script>
