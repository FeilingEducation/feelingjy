<div class="mb-4">
  <%= image_tag 'campus.jpeg', width: '100%' %>
  <%= image_tag profile_image_of(@instructor_info), class: 'd-block mx-auto', style: 'margin-top: -5rem;' %>
</div>
<div class="card float-right sticky-top mx-5" style="top:100px;width:280px;">
  <div class="bg-dark p-3">
    <span class="text-light">最低 <strong class="h5">￥788</strong> 每小时</span>
  </div>
  <div class="card-body">
    <%= form_with model: @transaction, method: 'post', local: true do |f| %>
      <%= f.hidden_field :instructor_id, value: @instructor_info.id %>
      <div class="form-group">
        <label>合作日期</label>
        <%= f.date_field :scheduled_date, value: 1.week.after.strftime('%Y-%m-%d'), class: 'form-control' %>
      </div>
      <div class="form-group">
        <label>合作项目</label>
        <%= f.select :service, service_options_for(@instructor_info), {include_blank: true}, class: 'custom-select d-block w-100' %>
      </div>
      <div class="form-group">
        <%= submit_tag '申请预定', class: 'btn btn-danger btn-block' %>
      </div>
    <% end %>
  </div>
</div>
