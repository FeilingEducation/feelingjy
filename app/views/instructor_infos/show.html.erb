<%= render partial: 'menu_bar' %>
<div class="mb-4">
  <%= image_tag 'campus.jpeg', width: '100%' %>
  <%= image_tag user_profile_image, class: 'd-block mx-auto', style: 'margin-top: -5rem;' %>
</div>
<div class="card float-right sticky-top mx-5" style="top:100px;width:280px;">
  <div class="bg-dark p-3">
    <span class="text-light">最低 <strong class="h5">￥788</strong> 每小时</span>
  </div>
  <div class="card-body">
    <%= form_tag '', method: 'post' do %>
      <div class="form-group">
        <label>合作日期</label>
        <%= date_field_tag :consult_date, nil, class: 'form-control' %>
      </div>
      <div class="form-group">
        <label>合作项目</label>
        <%= select_tag :consult_type, options_for_select(["前期咨询", "文书改写", "头脑风暴", "签证咨询"], nil), include_blank: true, class: 'custom-select d-block w-100' %>
      </div>
      <div class="form-group">
        <%= submit_tag '申请预定', class: 'btn btn-danger btn-block' %>
      </div>
    <% end %>
  </div>
</div>
<div class="row">
  <div class="col-12">
    <div>
      <%= text_field_tag :home_page_title, nil, class: 'convertible font-weight-bold h1', placeholder: '主页标题' %>
