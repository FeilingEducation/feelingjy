	background: url(<%= asset_url "homepage/advantage/2.png" %>) no-repeat;
}

.advantages .img.quality {
	background: url(<%= asset_url "homepage/advantage/3.png" %>) no-repeat;
	// background: url('../images/advantage/3.png') no-repeat;
}

.advantages:hover .img.price,
.advantages.active .img.price {
	// background: url('../images/advantage/2-green.png') no-repeat;
	background: url(<%= asset_url "homepage/advantage/2-green.png" %>) no-repeat;
}

.advantages:hover .img.quality,
.advantages.active .img.quality {
	background: url(<%= asset_url "homepage/advantage/3-green.png" %>) no-repeat;
	// background: url('../images/advantage/3-green.png') no-repeat;
}
.advantages {
	&:hover .body, &.active .body {
		background: #33c39a;
		color: #fff;
	}
}

.footer-top {
	position: relative;
	.footer-overlay {
		position: absolute;
		height: 100%;
		width: 100%;
		left: 0;
		top: 0;
		background: rgba(51, 195, 154, 0.5);
		.overlay-txt {
			color: #fff;
			position: absolute;
			top: 50%;
			transform: translateY(-50%);
			text-align: center;
			width: 100%;
			padding: 0px 15px;
			font-size: 24px;
			h1 {
				font-size: 42px;
			}
			p {
				margin-bottom: 50px;
			}
		}
	}
}

.main-footer {
	padding: 55px 0 45px;
	border-top: 1px solid #50BF9F;
	h4 {
		font-size: 24px;
		a {
			color: #31c89d;
		}
	}
	.body {
		padding-top: 25px;
		color: #979999;
	}
	p img {
		margin-right: 20px;
	}
	.email-date {
		p {
			color: #979999;
		}
		.dropdown {
			display: inline-block;
			padding-top: 20px;
			> a {
				color: #979999;
				img {
					margin-right: 5px;
				}
				i {
					margin-left: 15px;
					font-size: 18px;
				}
			}
		}
	}
}

.sub-footer {
	background: #31c89d;
	color: #fff;
	font-size: 12px;
	padding: 21px 0px;
	a {
		color: #fff;
	}
}

.main-header {
	position: fixed;
	top: 0;
	z-index: 99;
	width: 100vw;
	border-bottom: 1px solid #ddd;

	.main-nav {
		padding: 14px 0;

		li {
			display: inline-block;
			font-size: 16px;
			margin-right: 40px;
			&:last-child {
				margin-right: 0px;
			}
			a {
				color: #979999;
				&:hover {
					color: #2dbd94;
				}
			}
		}
	}

	&.signed-in{
		.main-nav{
			padding: 9px 0;

			.logo{
				padding-top: 5px;
			}
		}
	}
